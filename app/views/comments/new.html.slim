= form_for [@post, @comment] do |f|
  - if @comment.errors.any?
    #error_explanation
      h2
        = raw t('errors.template.header', count: @comment.errors.count, model: t('activerecord.models.post'))
      p
        = t('errors.template.body')
      ul
        - @comment.errors.full_messages.each do |message|
          li
            = raw message

  .field
    = f.label :text, t('.content_html')
    br
    = f.text_area(:text, rows: 15, "data-provide" => "markdown")
  br
  .pull-left
    = link_to t('.back'), root_path, class: 'btn btn-default btn-lg', method: :get
  .pull-right
    = f.button t('.submit'), class: 'btn btn-primary btn-lg'
